<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constTrack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edtTrackDesc"
        android:layout_width="300dp"
        android:layout_height="138dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittextlayout"
        android:gravity="top|right"
        android:hint="توضیحات"
        android:maxLength="40"
        android:elevation="8dp"
        android:maxLines="2"
        android:padding="5dp"
        android:singleLine="false"
        android:textAppearance="@style/FontForEditText"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTrackDate" />

    <EditText
        android:focusable="false"
        android:drawableLeft="@drawable/ic_date_range_white_24dp"

        android:id="@+id/edtTrackDate"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittextlayout"
        android:hint="تاریخ"
        android:inputType="textNoSuggestions"
        android:padding="5dp"
        android:fontFamily="@font/yekan"
        android:elevation="8dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>